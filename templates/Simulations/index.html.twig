{% extends 'base.html.twig' %}

{% block title %}Simulations
{% endblock %}
{% block stylesheets %}
	<!-- insertion de bootstrap et jquery -->
	<script src="js/bootstrap/bootstrap.min.js" integrity="sha384-3nhVhzgkAiK+aRAouB5S914cEx9yGFCeToSirPZfaTPyy6g+RbDkzkmojJymfCBY sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13 sha256-SUzPu+ewjZCj6CtwVs9sNh6Q/LMFi1w1RZ9TxpKmVkE=" crossorigin="anonymous"></script>
	<!-- insertion des fichier js et css spécifique à modification planning -->
	<link rel="stylesheet" href="{{ asset('CSS/Global/Modal.css') }}">
	<link rel="stylesheet" href="{{ asset('CSS/Global/IndexCrud.css') }}">
	<link rel="stylesheet" href="{{ asset('CSS/Global/NewCrud.css') }}">
	<link rel="stylesheet" href="{{ asset('CSS/Simulations/simulation.css') }}">
	<link href="js/jquery-ui/jquery-ui.css" rel="stylesheet">
	<link rel="stylesheet" href="{{ asset('CSS/Calendrier/Calendrier.css') }}">

{% endblock %}
{% block javascripts %}
	<script src="js/jquery-ui/external/jquery/jquery.js"></script>
	<script src="js/jquery-ui/jquery-ui.min.js"></script>
	<script src="js/Simulations/simulation.js"></script>
	{% if app.user == null %}
		<script type="text/javascript">
			document.location.href = "/"
		</script>
	{% endif %}
{% endblock %}

{% block body %}
	<input type="hidden" name="simInfos" id="simInfos" value='{{simulationsInfos.content}}'>

	<div class="index">
		<div class="all-container" id="all-header-test">
			<div class="top">
				<table class="header-ressource-consultation" style="font-size:medium;">
					<td class="header-td">
						<h1>Simulations</h1>
					</td>
					<td class="header-td-right">
						<div class="date-button">
							<button id="previousButton" class="btn-calendar-edit" onclick="SaveSimulation()">
								Sauvegarder la simulation
							</button>

							<button id="previousButton" class="btn-calendar-edit" onclick="NewSimulation()">
								Nouvelle Simulation
							</button>
						</div>

					</td>
				</table>
			</div>
		</div>
		<div class="all-tests-container" id="all">
			<div class="all-tests" id="all-tests"></div>

			{{ include ('Simulations/modal_delete.html.twig') }}
			{{ include ('Simulations/modal_change.html.twig') }}

		{% endblock %}
